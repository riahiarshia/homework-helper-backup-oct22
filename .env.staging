# ========================================
# STAGING ENVIRONMENT (AZURE)
# ========================================
# This is a TEMPLATE - actual values set in Azure App Service Configuration
# Mirror of production for pre-release testing

# Environment
NODE_ENV=staging
PORT=8080

# App Configuration
APP_URL=https://your-app-staging.azurewebsites.net

# Database Configuration (Azure PostgreSQL - STAGING)
DATABASE_URL=postgresql://username:password@your-staging-db.postgres.database.azure.com:5432/homework_helper_staging?ssl=true

# JWT Secrets (STAGING - Use strong secrets!)
JWT_SECRET=staging-super-secret-jwt-key-minimum-32-characters-long
ADMIN_JWT_SECRET=staging-super-secret-admin-jwt-key-minimum-32-characters-long

# OpenAI Configuration (DEVELOPMENT KEY - Same as local dev for cost tracking)
# Use same dev key as local, OR a separate staging key
OPENAI_API_KEY=sk-proj-staging-YOUR_STAGING_KEY_HERE
OPENAI_ORG_ID=

# Stripe Configuration (TEST MODE - Same as dev)
STRIPE_SECRET_KEY=sk_test_YOUR_TEST_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STAGING_WEBHOOK_SECRET
STRIPE_PRICE_ID=price_YOUR_TEST_PRICE_ID

# Admin Account
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
ADMIN_EMAIL=admin@yourdomain.com

# Azure Key Vault (OPTIONAL for staging)
AZURE_KEY_VAULT_NAME=your-keyvault-staging
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
OPENAI_SECRET_NAME=OpenAI-Staging

# Staging Settings
DEBUG=true
LOG_LEVEL=info
